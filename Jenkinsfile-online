pipeline {
  agent {
            kubernetes {
            cloud 'kubernetes'
          }
          }
    stages {
        stage ('checkout scm') {
            steps {
                checkout(scm)
            }
       }
        stage('Build') {
            steps {
              container ('docker'){
              sh 'echo "Hello World"'
              sh '''
              echo "Multiline shell steps works too"
              '''
        }
        }
        }
     }
}
